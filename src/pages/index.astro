---
import '../styles/global.css';
import { FeaturesSection } from '../components/FeaturesSection';
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <title>AutoAI Systems</title>
  <script>
    // Check for prefers-reduced-motion and add a class to the HTML element
    if (window.matchMedia('(prefers-reduced-motion: reduce)').matches) {
      document.documentElement.classList.add('reduce-motion');
    }
  </script>
</head>
<body class="bg-light-gray text-dark-gray">
  <div class="bg-primary-blue text-white p-4 text-center">
    <p class="text-sm">Minimal test version</p>
  </div>
  <main class="max-w-4xl mx-auto p-8">
    <h1 class="text-4xl font-bold text-primary-blue mb-4">AutoAI Systems</h1>
    <p class="mb-8">The full landing page is coming soon!</p>
    
    <!-- React component with Framer Motion animations -->
    <FeaturesSection client:visible />
  </main>
</body>
</html>
